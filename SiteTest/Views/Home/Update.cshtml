
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div class="modal-content" ng-app="Create" ng-controller="Controller" data-ng-init="load(@Convert.ToInt32(Request.QueryString["id"]))">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Update</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form name="form">
            <div class="modal-body">
                <div class="form-group">
                    <label for="exampleInputUserName">User Name</label>
                    <input type="text" class="form-control" ng-model="UserModel.UserName" required id="exampleInputUserName" aria-describedby="emailHelp" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" ng-model="UserModel.Password" required id="exampleInputPassword1" placeholder="Password">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hide()">Close</button>
                <button type="submit" class="btn btn-primary" ng-click="Update()">{{btnUpdate}}</button>
            </div>
        </form>
    </div>

